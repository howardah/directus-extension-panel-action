{
	"name": "panel-action",
	"description": "A configurable button or link panel for Directus dashboards.",
	"icon": "extension",
	"version": "1.0.0-beta.1",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-extension-bundle"
	],
	"type": "module",
	"files": [
		"dist"
	],
	"directus:extension": {
		"type": "bundle",
		"path": {
			"app": "dist/app.js",
			"api": "dist/api.js"
		},
		"entries": [
			{
				"type": "panel",
				"name": "panel-action-button",
				"source": "src/panel-action-button/index.ts"
			},
			{
				"type": "endpoint",
				"name": "panel-action-endpoint",
				"source": "src/panel-action-endpoint/index.ts"
			}
		],
		"host": "^10.10.0"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link",
		"validate": "directus-extension validate",
		"add": "directus-extension add"
	},
	"devDependencies": {
		"@directus/extensions-sdk": "17.0.2",
		"typescript": "^5.9.3",
		"vue": "^3.5.24",
		"@types/node": "^24.10.1"
	}
}
